@model IEnumerable<Studio_Line.Models.Customers>


@{
    ViewBag.Title = "Index";
}
<br>

<h2>Customers</h2><br/>

<button class="btn btn-default"> @Html.ActionLink("New Customer", "NewCustomer", "Customer")</button>


@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}

else
{

   <table class="table-style">
       
        <thead>
            <tr>
                <th>Customers </th>
                <th>Email Address </th>
                <th>Membership Subscription </th>
                <th></th>
                
            </tr>
        </thead>


        <tbody>
            @foreach (var customers in Model) {

                <tr>
                    <td>
                        @Html.ActionLink(customers.Name, "Edit", "Customer", new { id = customers.Id }, null)
                    </td>
                    <td>
                        @customers.Email
                    </td>
                    <td>
                        @customers.MembershipType.Name
                    </td>
                    <td class="btn-col">
                        <button class="btn btn-light">@Html.ActionLink("Details", "Details", "Customer", new { id = customers.Id }, null)</button>
                        <button class="btn btn-light">@Html.ActionLink("Delete", "Delete", "Customer", new { id = customers.Id }, null)</button>
                    </td>
                </tr>
            }
         
         </tbody>        
      </table>  
}


